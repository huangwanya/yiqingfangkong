<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dao.GanranxinxiDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.entity.GanranxinxiEntity" id="ganranxinxiMap">
        <result property="biaoti" column="biaoti"/>
        <result property="zhanghao" column="zhanghao"/>
        <result property="xingming" column="xingming"/>
        <result property="jiatingzhuzhi" column="jiatingzhuzhi"/>
        <result property="ganranzhuangtai" column="ganranzhuangtai"/>
        <result property="dengjiriqi" column="dengjiriqi"/>
        <result property="dengjibeizhu" column="dengjibeizhu"/>
    </resultMap>

	<select id="selectListVO"
		resultType="com.entity.vo.GanranxinxiVO" >
		SELECT * FROM ganranxinxi  ganranxinxi         
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectVO"
		resultType="com.entity.vo.GanranxinxiVO" >
		SELECT  ganranxinxi.* FROM ganranxinxi  ganranxinxi
 		<where> 1=1 ${ew.sqlSegment}</where>
	</select>

    <select id="selectListView"
		resultType="com.entity.view.GanranxinxiView" >

		SELECT  ganranxinxi.* FROM ganranxinxi  ganranxinxi 	        
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectView"
		resultType="com.entity.view.GanranxinxiView" >
		SELECT * FROM ganranxinxi  ganranxinxi <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	

    <select id="selectValue" resultType="map" >
        SELECT ${params.xColumn}, sum(${params.yColumn}) total FROM ganranxinxi
        <where> 1=1 ${ew.sqlSegment}</where>
        group by ${params.xColumn}
    </select>

    <select id="selectTimeStatValue" resultType="map" >
        <if test = 'params.timeStatType == "日"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y-%m-%d') ${params.xColumn}, sum(${params.yColumn}) total FROM ganranxinxi
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y-%m-%d')
        </if>
        <if test = 'params.timeStatType == "月"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y-%m') ${params.xColumn}, sum(${params.yColumn}) total FROM ganranxinxi
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y-%m')
        </if>
        <if test = 'params.timeStatType == "年"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y') ${params.xColumn}, sum(${params.yColumn}) total FROM ganranxinxi
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y')
        </if>
    </select>
   
    <select id="selectGroup" resultType="map" >
        SELECT ${params.column} , count(1) total FROM ganranxinxi  
        <where> 1=1 ${ew.sqlSegment}</where>
        group by ${params.column}
    </select>
	
</mapper>
